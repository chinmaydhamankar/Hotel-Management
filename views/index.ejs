<!DOCTYPE html>
<html ng-app="Restaurant">
  <head>
    <title><%= title %></title>
        <link rel='stylesheet' href='/stylesheets/style.css' />
        <link rel="stylesheet" href="http://netdna.bootstrapcdn.com/bootstrap/3.3.0/css/bootstrap.min.css"/>
        <script src="http://ajax.googleapis.com/ajax/libs/angularjs/1.3.10/angular.min.js"></script>
        <script src="/javascripts/app.js"></script>
  </head>
  <body data-ng-controller="RestaurantController">
  <h1>The Korean Barbeque</h1>
  <hr color="darkred" width="3px">
    <div class="container">
        <div class="col-md-8">
            <form name="restaurant-form">
                <div  data-ng-repeat="menu in restaurantMenu">
                    <h3>{{menu.name}}</h3>
                    <p>{{menu.description}}</p>
                    <span class="cart-span">&nbsp;items</span>
                    <span>$ {{menu.price}}</span>
                    <input
                          type="number"
                          ng-model=menu.quantity>
                    </input>
                    <span class="cart-span">Add to cart - &nbsp;</span>
                </div>
                <br><br>
                <div style="text-align: center">
                    <button ng-click="generateBill()">Generate Bill</button>
                </div>
            </form>
        </div>
        <div class="col-md-4 billBox" data-ng-show="billRequested">
            <div style="text-align: center">
                <h3>Bill</h3>
            </div>
            <br><br>
            <div id="headers" class="container fullWidth">
                <div class="col-md-6">
                    <h5>Menu</h5>
                </div>
                <div class="col-md-2">
                    <h5>Price</h5>
                </div>
                <div class="col-md-2">
                    <h5>Quantity</h5>
                </div>
                <div class="col-md-2">
                    <h5>Amount</h5>
                </div>
            </div>
            <hr>
            <div id="billedItems" data-ng-repeat="item in billedItems" class="container fullWidth">
                <div class="col-md-6">
                    <span>{{item.name}}</span>
                </div>
                <div class="col-md-2">
                    <span>{{item.price}}</span>
                </div>
                <div class="col-md-2">
                    <span>{{item.quantity}}</span>
                </div>
                <div class="col-md-2">
                    <span>${{item.amount}}</span>
                </div>
            </div>
            <hr>
            <div class="container fullWidth bill-lastRow">
                <div class="col-md-10">
                    <h5>Total:</h5>
                </div>
                <div class="col-md-2">
                    <h5>${{totalBill}}</h5>
                </div>
            </div>
        </div>
    </div>
  </body>
</html>
